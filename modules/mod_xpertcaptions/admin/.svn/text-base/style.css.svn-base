input[type=text],select{padding: 5px 8px; border: 1px solid #ccc; font-size: 12px; -moz-border-radius: 3px;-webkit-border-radius: 3px; border-radius:3px}
input[type=text]{-moz-box-shadow: 0 3px 3px #eee inset;-webkit-box-shadow: 0 3px 3px #eee inset;box-shadow: 0 3px 3px #eee inset;}

#combobox-position-select{min-width: 150px;height: 32px;}
#position{padding:2px 0 0 3px; width: 115px !important; border:none;height:24px !important;margin-top:3px; -moz-box-shadow:none;-webkit-box-shadow: none;}
.paramlist_value label.tx-enable, .paramlist_value label.tx-disable{cursor: pointer; visibility: visible;}
.jpane-slider{height: auto !important;}
.jpane-slider > table{display: none;height: 0px;}
table.admintable td.key, table.admintable td.paramlist_key{background: #eef8fe !important; min-width:152px}

.success, .warning{background: url(success-warning.png)repeat 0 0;margin: 0 0 5px 0; height: 40px; line-height: 38px; font-size:11px;text-shadow: 0 1px 1px #FFFFFF;}
.success{color: #076a07;}
.warning{background-position: 0px 40px; color: #f03636;}
.success p, .warning p{background: url(msg-icon.png)no-repeat 10px 0; padding-left: 40px;}
.warning p{background-position: 10px -40px;}
.warning a{color: #b71212}


/* root element for accordion. decorated with rounded borders and gradient background image */
h2.acc_trigger {
    padding: 6px 0; 
    background: url(h2-bg.gif) 0 0;
    margin: 0;
    text-shadow: 1px 1px 1px #f8f8f8;
}
h2.acc_trigger a {
    color: #000;
    text-decoration: none;
    display: block;
    padding: 0 0 0 30px;
    background: url(header-icon.png) no-repeat 6px 0px;
    font-size: 14px;
}
h2.acc_trigger a:hover,h2.acc_trigger a:focus,h2.acc_trigger a:active {
    outline: none;
}
h2.active {background: url(h2-active-bg.gif) 0 0;}
h2.active a {background-position:6px -15px; }
.acc_container {
    padding: 0;
    margin: 0;
    overflow: hidden;
    font-size: 1.2em;
    clear: both;
    background: #fff;
}
a.help{background: url(info.png) no-repeat; padding: 8px 0 5px 30px; font-size: 12px;font-weight: bold;display: block; }
